@model IEnumerable<CommonSolution.DTOs.DtoReclamo>

@using GridMvc.Html
@{
    ViewBag.Title = "_Listado";
}
@Styles.Render("~/Content/gridmvc")

<h2>Reclamos:</h2>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.id).Titled("Nro Reclamo").SetWidth(30);
    columns.Add(c => c.fechaYhora).Titled("Fecha").SetWidth(30);
    columns.Add(c => c.observaciones).Titled("Comentarios").SetWidth(30);
    columns.Add(c => c.idCiudadano).Titled("Id Ciudadano").SetWidth(20);
    columns.Add(c => c.nombreTipoReclamo).Titled("Tipo").SetWidth(20);
    columns.Add(c => c.idCuadrilla).Titled("Cuadrilla").SetWidth(20);
    columns.Add(c => c.idZona).Titled("Zona").SetWidth(20);

    
}).WithPaging(8).EmptyText("No hay nada que mostrar")


@section Scripts {
   
    @Scripts.Render("~/bundles/grid")
}


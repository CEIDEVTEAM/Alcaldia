
@{
    ViewBag.Title = "Mapa Termico";
}

<h2>Mapa Térmico</h2>
<hr />

<form>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Desde</label>
            <div class="col-md-10">
                <input type="date" id="fechaInicio" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hasta</label>
            <div class="col-md-10">
                <input type="date" id="fechaFinal" class="form-control" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="button" name="Filtrar" value="Filtrar" id="btnFiltroMapaCalor" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>
<br />

<div id="map" class="form-group" style="width: auto; height: 600px">

</div>


@section Scripts{
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCewHvBMDcMrBFlu3aqp1OhShkwSjWLiBQ&libraries=visualization&callback=initMapTermico">

    </script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/heatMap")
}
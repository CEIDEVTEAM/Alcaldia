@model IEnumerable<CommonSolution.DTOs.DtoZona>
@using GridMvc.Html
@{
    ViewBag.Title = "Listar Zonas";
}
@Styles.Render("~/Content/gridmvc")

<h2>Listado de Zonas</h2>

<p>
    @Html.ActionLink("Agregar", "Add",null, new { @class = "btn btn-primary" })
<p>
 

    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.nombre).Titled("Nombre").SetWidth(30).Filterable(true);
    columns.Add(c => c.color).Titled("Color").Sanitized(false).Encoded(false).RenderValueAs(c => new HtmlString(
    "<div style='height: 20px; width: 20px; background-color: " + c.color + "'></div>"
    )).SetWidth(50);

    columns.Add(c => c.reclamosActivos).Titled("Reclamos activos").SetWidth(10).Filterable(true); ;
    columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Borrar", "Delete", new { id = o.id }, new { @class = "btn btn-danger" }));

}).WithPaging(8).EmptyText("No hay nada que mostrar").Sortable()


    @section Scripts {

        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/grid")

    }

@model IEnumerable<CommonSolution.DTOs.DtoZona>

@{
    ViewBag.Title = "Listar Zonas";
}

<h2>Listado de Zonas</h2>

<p>
    @Html.ActionLink("Agregar", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.color)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.EditorFor(modelItem => item.color, new { htmlAttributes = new {@disabled="disabled", type = "color"} })

        </td>
        <td>
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

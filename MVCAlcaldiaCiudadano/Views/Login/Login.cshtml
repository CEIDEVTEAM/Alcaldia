@model CommonSolution.DTOs.DtoLogin

@{
    ViewBag.Title = "Iniciar Sesión";
}
@Styles.Render("~/Background/css")
@Styles.Render("~/Content/login")
<div>
    <div>
        @using (Html.BeginForm("Login", "Login", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Iniciar Sesión</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.user, new { htmlAttributes = new { @class = "form-control sr-only", @placeholder = "Usuario", @autofocus = "autofocus" } })
            @Html.ValidationMessageFor(model => model.user, "", new { @class = "text-danger" })

            <br />
            
            @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña" } })
            @Html.ValidationMessageFor(model => model.pass, "", new { @style = "font-weight: bold" })

            <input type="submit" value="Ingresar" class="btn btn-success btn-lg btn-block" />
            <br />
            <br />
            <button class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Add", "UsuarioCiudadano")';return false;">Quiero Registrarme &raquo;</button>

        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
